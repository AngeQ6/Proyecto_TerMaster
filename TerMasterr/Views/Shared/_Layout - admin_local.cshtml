<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Index - TerMaster</title>
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Favicons -->
    <link href="@Url.Content("~/Content/Images/Logo_2.png")" rel="icon">
    <link href="@Url.Content("~/assets/img/apple-touch-icon.png")" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&family=Poppins:wght@100;200;300;400;500;600;700;800;900&family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="@Url.Content("~/assets/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/assets/vendor/bootstrap-icons/bootstrap-icons.css")" rel="stylesheet">
    <link href="@Url.Content("~/assets/vendor/aos/aos.css")" rel="stylesheet">
    <link href="@Url.Content("~/assets/vendor/glightbox/css/glightbox.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/assets/vendor/swiper/swiper-bundle.min.css")" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="@Url.Content("~/assets/css/main.css")" rel="stylesheet">

    <style>
        /* Estilo para las imágenes laterales */
        .side-img {
            position: fixed;
            top: 50%;
            width: 8%; /* Ajusta el tamaño de la imagen según sea necesario */
            height: auto;
            transform: translateY(-50%); /* Centra verticalmente la imagen */
            z-index: 1000; /* Asegura que las imágenes estén encima del contenido */
        }

        .left-img {
            left: 0;
        }

        .right-img {
            right: 0;
        }

        /* Estilo para el contenido */
        .main {
            margin: 0 auto;
            max-width: calc(100% - 16%); /* Ajusta el espacio del contenido para no solaparse con las imágenes laterales */
            padding: 0;
        }

        .logo {
            display: flex;
            align-items: center;
        }

            .logo img {
                max-width: 100px; /* Ajusta el tamaño máximo del logo */
                height: auto;
            }

        .sitename {
            margin-left: 10px; /* Espacio entre el logo y el texto */
        }
    </style>

</head>

<body class="index-page">

    <header id="header" class="header d-flex align-items-center fixed-top">


        <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

            <a class="logo d-flex align-items-center">
                <img src="~/Content/Images/Logo.png" width="70" height="70">
                <h1 class="sitename">TerMaster</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="@Url.Action("Index","Conductor")" class="active">Home</a></li>
                    <li><a href="@Url.Action("Modificar_datos_personales", "Conductor")">Modificar datos personales</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Modificar_datos_personales", "Conductor")">Cerrar Sesion</a></li>
                </ul>

                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

        </div>
    </header>

    <main class="main">

        <!-- About Section -->
        <section id="about" class="about section">
            <div class="container" data-aos="fade-up" data-aos-delay="100">
                @RenderBody()
            </div>
        </section>

    </main>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Imágenes laterales -->
    <!--<img src="@Url.Content("~/Content/Images/Logo_azul.png")" alt="Left Image" class="side-img left-img">
    <img src="@Url.Content("~/Content/Images/Logo_azul.png")" alt="Right Image" class="side-img right-img">-->

    <!-- Vendor JS Files -->
    <script src="@Url.Content("~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/assets/vendor/php-email-form/validate.js")"></script>
    <script src="@Url.Content("~/assets/vendor/aos/aos.js")"></script>
    <script src="@Url.Content("~/assets/vendor/glightbox/js/glightbox.min.js")"></script>
    <script src="@Url.Content("~/assets/vendor/purecounter/purecounter_vanilla.js")"></script>
    <script src="@Url.Content("~/assets/vendor/swiper/swiper-bundle.min.js")"></script>

    <!-- Main JS File -->
    <script src="@Url.Content("~/assets/js/main.js")"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
