
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout - admin_local.cshtml";
}

<h2>Index</h2>

@if (Model != null && Model.Any())
{
    <table id="conductoresTable" class="table table-striped">
        <thead>
            <tr>
                <th>Orden</th>
                <th>ID</th>
                <th>Nombre</th>
                <th>Placa del Bus</th>
                <th>Horario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var conductor in Model)
            {
                <tr data-id="@conductor.Id">
                    <td class="orden">@conductor.Orden</td>
                    <td>@conductor.Id</td>
                    <td>@conductor.Nombre</td>
                    <td>@conductor.PlacaBus</td>
                    <td>
                        <input type="time" class="form-control horario-input" value="@conductor.Horario" data-id="@conductor.Id" />
                    </td>
                </tr>
}
        </tbody>
    </table> }
else
{
    <p>No hay conductores para mostrar.</p>}

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script>
        $(function () {
            $("#conductoresTable tbody").sortable({
                helper: function (e, tr) {
                    var $originals = tr.children();
                    var $helper = tr.clone();
                    $helper.children().each(function (index) {
                        $(this).width($originals.eq(index).width());
                    });
                    return $helper;
                },
                update: function (event, ui) {
                    var nuevoOrden = [];
                    $("#conductoresTable tbody tr").each(function (index) {
                        var id = $(this).data("id");
                        nuevoOrden.push(id);
                        $(this).find(".orden").text(index + 1);
                    });

                    $.ajax({
                        url: '@Url.Action("ReordenarConductores", "Admin_local")',
                        type: 'POST',
                        data: { nuevoOrden: nuevoOrden },
                        traditional: true,
                        success: function (result) {
                            if (result.success) {
                                console.log("Orden actualizado con éxito");
                            }
                        }
                    });
                }
            }).disableSelection();

            $(".horario-input").change(function () {
                var id = $(this).data("id");
                var horario = $(this).val();

                $.ajax({
                    url: '@Url.Action("ActualizarHorario", "Admin_local")',
                    type: 'POST',
                    data: { id: id, horario: horario },
                    success: function (result) {
                        if (result.success) {
                            console.log("Horario actualizado con éxito");
                        }
                    }
                });
            });
        });
    </script>
}