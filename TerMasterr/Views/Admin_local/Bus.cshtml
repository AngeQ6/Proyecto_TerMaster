@model IEnumerable<Capa_entidad.Bus>

@{
    ViewBag.Title = "Bus";
    Layout = "~/Views/Shared/_Layout - admin_local.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<style>
    .header_2 {
        background: -webkit-linear-gradient(315deg, #4723D9 0%, #00D2Df 100%);
        padding: 10px;
        border-radius: 10px 10px 0 0;
    }
</style>

<div class="header_2">
    <h2 class="text-light">Buses</h2>
</div>
<br />
<div class="d-flex justify-content-between align-items-center mb-4">
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBusModal">
        <i class="bi bi-plus-circle me-0.99 text-end"></i>
    </button>
    @*<div class="text-end">
        <label>Frecuencia de salida:</label>
        <input class="form-control" id="frencuencia" name="frecuencia" />
    </div>*@
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var bus in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-start">
                        <h5 class="card-title mb-0">Placa: @bus.placa</h5>
                        <form action="@Url.Action("Eliminar_bus", "Admin_local", new { id = bus.id_conductor })" method="post" class="d-inline-block" onsubmit="return confirmDeleteBus(event, '@bus.id_conductor');">
                            <button type="submit" class="btn btn-danger text-end"><i class="bi bi-trash"></i></button>

                            @if (TempData["SuccessMessage_eliminacionBus"] != null)
                            {
                                <script>
                                    Swal.fire({
                                        icon: 'success',
                                        title: '¡Éxito!',
                                        text: '@Html.Raw(TempData["SuccessMessage_eliminacionBus"])'
                                    });
                                </script>
                            }
                            @if (TempData["ErrorMessage_eliminacionBus"] != null)
                            {
                                <script>
                                    Swal.fire({
                                        icon: 'error',
                                        title: '¡Error!',
                                        text: '@Html.Raw(TempData["ErrorMessage_eliminacionBus"])'
                                    });
                                </script>
                            }
                        </form>
                        <button class="btn btn-primary" data-placa="@bus.placa" data-bs-toggle="modal" data-bs-target="#editBusModal">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <p><strong>ID del conductor:</strong> @bus.id_conductor</p>
                        <p><strong>Nombre del conductor:</strong> @bus.nombre</p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No hay buses disponibles.</p>
    }
</div>

<!-- Modal para agregar bus -->
<div class="modal fade" id="addBusModal" tabindex="-1" aria-labelledby="addBusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addBusModalLabel">Agregar Nuevo Bus</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="@Url.Action("AddBus", "Admin_local")" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="placa" class="form-label">Placa del bus</label>
                        <input type="text" class="form-control" id="placa" name="placa" required>
                    </div>
                    <div class="mb-3">
                        <label for="id_conductor" class="form-label">Asignar conductor</label>
                        <select class="form-control" id="id_conductor_add" name="id_conductor" required>
                            <option value="">Selecciona un conductor</option>
                            @foreach (var conductor in ViewBag.Conductores)
                            {
                                <option value="@conductor.id_conductor">@conductor.id_conductor</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre del conductor</label>
                        <input type="text" class="form-control" id="nombre_add" name="nombre" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Agregar Bus</button>
                </div>
                @if (TempData["SuccessMessage_RegBus"] != null)
                {
                    <script>
                        Swal.fire({
                            icon: 'success',
                            title: '¡Éxito!',
                            text: '@Html.Raw(TempData["SuccessMessage_RegBus"])'
                        });
                    </script>
                }
                @if (TempData["ErrorMessage_RegBus"] != null)
                {
                    <script>
                        Swal.fire({
                            icon: 'error',
                            title: '¡Error!',
                            text: '@Html.Raw(TempData["ErrorMessage_RegBus"])'
                        });
                    </script>
                }
            </form>
        </div>
    </div>
</div>

<!-- Modal para editar bus -->
<div class="modal fade" id="editBusModal" tabindex="-1" aria-labelledby="editBusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editBusModalLabel">Editar Bus</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="@Url.Action("Edit_bus", "Admin_local")" method="post">
                <div class="modal-body">
                    <input type="hidden" id="old_placa_edit" name="oldPlaca" value="placa">

                    <div class="mb-3">
                        <label for="placa_edit" class="form-label">Placa del bus</label>
                        <input type="text" class="form-control" id="placa_edit" name="placa" required>
                    </div>

                    <div class="mb-3">
                        <label for="id_conductor_edit" class="form-label">Asignar conductor</label>
                        <select class="form-control" id="id_conductor_edit" name="id_conductor" required>
                            <option value="">Selecciona un conductor</option>
                            @foreach (var conductor in ViewBag.Conductores)
                            {
                                <option value="@conductor.id_conductor">@conductor.id_conductor</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="nombre_edit" class="form-label">Nombre del conductor</label>
                        <input type="text" class="form-control" id="nombre_edit" name="nombre" required readonly>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
                @if (TempData["SuccessMessage_EditBus"] != null)
                {
                    <script>
                        Swal.fire({
                            icon: 'success',
                            title: '¡Éxito!',
                            text: '@Html.Raw(TempData["SuccessMessage_EditBus"])'
                        });
                    </script>
                }
                @if (TempData["ErrorMessage_EditBus"] != null)
                {
                    <script>
                        Swal.fire({
                            icon: 'error',
                            title: '¡Error!',
                            text: '@Html.Raw(TempData["ErrorMessage_EditBus"])'
                        });
                    </script>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var conductores = @Html.Raw(Json.Encode(ViewBag.Conductores)); // Lista de conductores

            // Manejo del cambio en el select del modal de agregar bus
            document.getElementById('id_conductor_add').addEventListener('change', function () {
                var idSeleccionado = this.value;
                var nombreConductor = '';

                // Busca el conductor correspondiente al ID seleccionado
                conductores.forEach(function (conductor) {
                    if (conductor.id_conductor == idSeleccionado) {
                        nombreConductor = conductor.nombre;
                    }
                });

                // Asigna el nombre al campo de nombre
                document.getElementById('nombre_add').value = nombreConductor;
            });

            // Manejo del modal de edición para precargar los datos
            $('#editBusModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var placa = button.data('placa');

                var modal = $(this);
                modal.find('#placa_edit').val(placa);

                // Llenado de conductor y nombre en el modal de edición
                $('#id_conductor_edit').on('change', function () {
                    var idSeleccionado = this.value;
                    var nombreConductor = '';

                    conductores.forEach(function (conductor) {
                        if (conductor.id_conductor == idSeleccionado) {
                            nombreConductor = conductor.nombre;
                        }
                    });

                    modal.find('#nombre_edit').val(nombreConductor);
                });
            });
        });

        function confirmDeleteBus(event, id_conductor) {
            event.preventDefault();
            Swal.fire({
                title: '¿Estás seguro?',
                text: 'Esta acción no se puede deshacer.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    event.target.submit(); // Envía el formulario
                }
            });
            return false; // Evita la acción predeterminada
        }
    </script>
}
