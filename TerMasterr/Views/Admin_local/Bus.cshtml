@model IEnumerable<Capa_entidad.Bus>

@{
    ViewBag.Title = "Bus";
    Layout = "~/Views/Shared/_Layout - admin_local.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<style>
    .header_2 {
        background: -webkit-linear-gradient(315deg, #4723D9 0%, #00D2Df 100%);
        padding: 10px;
        border-radius: 10px 10px 0 0;
    }
</style>

<div class="header_2">
    <h2 class="text-light">Buses</h2>
</div>
<br />
<div class="d-flex justify-content-between align-items-center mb-4">
    <!-- Botón para agregar nuevo bus -->
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBusModal" onclick="resetModal()">
        <i class="bi bi-plus-circle me-0.99 text-end"></i>
    </button>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var bus in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-start">
                        <h5 class="card-title mb-0">Placa: @bus.placa</h5>
                        <form action="@Url.Action("Eliminar_bus", "Admin_local", new { id = bus.id_conductor })" method="post" class="d-inline-block" onsubmit="return confirmDeleteBus(event, '@bus.id_conductor');">
                            <button type="submit" class="btn btn-danger text-end"><i class="bi bi-trash"></i></button>
                        </form>
                        <!-- Botón para editar un bus -->
                        <button class="btn btn-primary" onclick="editarBus('@bus.placa', '@bus.id_conductor', '@bus.nombre')">
                            <i class="bi bi-pencil me-0.99"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <p><strong>ID del conductor:</strong> @bus.id_conductor</p>
                        <p><strong>Nombre del conductor:</strong> @bus.nombre</p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No hay buses disponibles.</p>
    }
</div>

<!-- Modal para agregar/editar bus -->
<div class="modal fade" id="addBusModal" tabindex="-1" aria-labelledby="addBusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addBusModalLabel">Agregar Bus</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="@Url.Action("AddBus", "Admin_local")" method="post">
                <div class="modal-body">
                    <input type="hidden" id="placaHidden" name="placaHidden" value="">
                    <div class="mb-3">
                        <label for="placa" class="form-label">Placa del bus</label>
                        <input type="text" class="form-control" id="placa" name="placa" required>
                    </div>
                    <div class="mb-3">
                        <label for="id_conductor" class="form-label">Asignar conductor</label>
                        <select class="form-control" id="id_conductor" name="id_conductor" required>
                            <option value="">Selecciona un conductor</option>
                            @foreach (var conductor in ViewBag.Conductores)
                            {
                                <option value="@conductor.id_conductor">@conductor.id_conductor</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre del conductor</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" disabled>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar Bus</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var conductores = @Html.Raw(Json.Encode(ViewBag.Conductores));

            // Manejo del cambio en el select para actualizar el nombre del conductor
            document.getElementById('id_conductor').addEventListener('change', function () {
                var idSeleccionado = this.value;
                var nombreConductor = '';
                for (var i = 0; i < conductores.length; i++) {
                    if (conductores[i].id_conductor.toString() === idSeleccionado) {
                        nombreConductor = conductores[i].nombre;
                        break;
                    }
                }
                document.getElementById('nombre').value = nombreConductor;
            });

            // Función para cargar los datos en el modal al editar
            window.editarBus = function (placa, id_conductor, nombre) {
                // Llenar los campos del modal con los datos del bus
                document.getElementById('placa').value = placa;
                document.getElementById('placaHidden').value = placa;
                document.getElementById('id_conductor').value = id_conductor;

                // Actualizar el nombre del conductor en el campo correspondiente
                var nombreConductor = '';
                for (var i = 0; i < conductores.length; i++) {
                    if (conductores[i].id_conductor.toString() === id_conductor) {
                        nombreConductor = conductores[i].nombre;
                        break;
                    }
                }
                document.getElementById('nombre').value = nombreConductor;

                // Cambiar el título del modal
                document.getElementById('addBusModalLabel').innerText = 'Editar Bus';

                // Abrir el modal
                var modal = new bootstrap.Modal(document.getElementById('addBusModal'));
                modal.show();
            };

            // Función para resetear el modal al agregar un nuevo bus
            window.resetModal = function () {
                // Limpiar todos los campos del modal
                document.getElementById('placa').value = '';
                document.getElementById('placaHidden').value = '';
                document.getElementById('id_conductor').value = '';
                document.getElementById('nombre').value = '';

                // Cambiar el título del modal
                document.getElementById('addBusModalLabel').innerText = 'Agregar Bus';
            };
        });
    </script>
}
