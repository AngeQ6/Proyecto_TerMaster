@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var conductores = @Html.Raw(Json.Encode(ViewBag.Conductores)); // Lista de conductores

            // Manejo del cambio en el select del modal de agregar bus
            document.getElementById('id_conductor_add').addEventListener('change', function () {
                var idSeleccionado = this.value;
                var nombreConductor = '';

                // Busca el conductor correspondiente al ID seleccionado
                for (var i = 0; i < conductores.length; i++) {
                    if (conductores[i].id_conductor.toString() === idSeleccionado) {
                        nombreConductor = conductores[i].nombre;
                        break;
                    }
                }

                // Llena el campo de nombre
                document.getElementById('nombre_add').value = nombreConductor;
            });

            // Manejo del modal de edición
            $('#editBusModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Botón que activó el modal
                var placa = button.data('placa'); // Obtener la placa del bus desde el botón

                // Hacer la solicitud AJAX para obtener los datos del bus
                $.getJSON(`/Admin_local/Get_busByPlaca?placa=${placa}`, function (data) {
                    // Rellenar los campos del modal con los datos del bus
                    $('#placa_hidden').val(data.placa); // Asignar la placa al campo oculto
                    $('#placa_edit').val(data.placa); // Asignar la placa al campo de texto
                    $('#id_conductor_edit').val(data.id_conductor); // Asignar el conductor

                    // Asignar el nombre del conductor correspondiente
                    $('#nombre_edit').val(data.nombre);
                }).fail(function () {
                    console.error('Error al obtener los datos del bus.');
                });
            });

            // Manejo del cambio en el select del modal de edición
            document.getElementById('id_conductor_edit').addEventListener('change', function () {
                var idSeleccionado = this.value;
                var nombreConductor = '';

                // Busca el conductor correspondiente al ID seleccionado
                for (var i = 0; i < conductores.length; i++) {
                    if (conductores[i].id_conductor.toString() === idSeleccionado) {
                        nombreConductor = conductores[i].nombre;
                        break;
                    }
                }

                // Llena el campo de nombre automáticamente
                document.getElementById('nombre_edit').value = nombreConductor;
            });
        });

    </script>
}


