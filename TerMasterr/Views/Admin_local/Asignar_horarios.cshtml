@model IEnumerable<TerMasterr.Controllers.Admin_localController>

@{
    ViewBag.Title = "Asignar Horarios";
    Layout = "~/Views/Shared/_Layout - admin_local.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <!-- Aquí puedes poner un ícono o una imagen relacionada, si es necesario -->
                        <img src="ruta-icono-placeholder" alt="Icon" class="img-fluid">
                    </div>
                    <div>
                        <h5 class="card-title">Conductor ID: @item.IdConductor</h5>
                        <p class="card-text">Nombre: @item.NombreConductor</p>
                        <p class="card-text">Placa del Bus: @item.PlacaBus</p>
                        <p class="card-text">Fecha de Ingreso: @item.FechaIngreso.ToString("dd/MM/yyyy HH:mm:ss")</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
