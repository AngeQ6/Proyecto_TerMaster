@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Login Form Using Bootstrap 5</title>
    <!-- Bootstrap 5 CDN Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">


    <!-- Custom CSS Link -->
    <link rel="stylesheet" href="style.css">
</head>
<body class="bg-dark">

    <section class="wrapper">
        <div class="container">
            <div class="col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 text-center">
                <div class="logo">
                    <img decoding="async" src="~/Content/Images/Logo_azul.png" class="img-fluid" alt="logo">
                </div>


                @using (Html.BeginForm("Validar_cod_conductor", "Login", FormMethod.Post))
                {
                    <div class="rounded bg-white shadow p-5">
                        <h3 class="text-dark fw-bolder fs-4 mb-2">Validar codigo de pueblo</h3>
                        <br />
                        <div class="form-floating mb-3">
                            <input type="number" class="form-control" id="floatingid" name="id_pueblo" placeholder="Codigo del pueblo" required>
                            <label for="floatingFirstName">Codigo del pueblo</label>
                        </div>
                        <button type="submit" class="btn btn-primary submit_btn w-60 my-4">Validar</button>
                        <a href="@Url.Action("Login", "Login")" class="btn btn-secondary submit_btn w-40 my-4">Atrás</a>
                        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                        @if (TempData["Mensaje_exito"] != null)
                        {
                            <script>
                                Swal.fire({
                                    icon: 'success',
                                    title: '¡Éxito!',
                                    text: '@Html.Raw(TempData["Mensaje_exito"])'
                                }).then(function () {
                                    window.location = '@Url.Action("Registro_conductor", "Login")';
                                });
                            </script>
                         }
                        @if (TempData["Mensaje"] != null)
                        {
                            <script>
                                Swal.fire({
                                    icon: 'error',
                                    title: '¡Error!',
                                    text: '@Html.Raw(TempData["Mensaje"])'
                                });
                            </script>
                         }
                    </div>
                 }
            </div>
        </div>
    </section>
    
</body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Variables */
    :root {
        --primary-font-family: 'Poppins', sans-serif;
        --light-white: #f5f8fa;
        --gray: #5e6278;
        --gray-1: #e3e3e3;
    }

    body {
        font-family: var(--primary-font-family);
        font-size: 14px;
    }

    /* Main CSS */
    .wrapper {
        padding: 0 0 100px;
        background-image: url("images/bg.png");
        background-position: bottom center;
        background-repeat: no-repeat;
        background-size: contain;
        background-attachment: fixed;
        min-height: 100%;
    }

        .wrapper .logo img {
            max-width: 50%;
        }

        .wrapper input {
            background-color: var(--light-white);
            border-color: var(--light-white);
            color: var(--gray);
        }

            .wrapper input:focus {
                box-shadow: none;
            }

        .wrapper .submit_btn {
            padding: 10px 15px;
            font-weight: 500;
        }

    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

@section scripts{
    <script>
            // Puedes añadir aquí cualquier lógica adicional en JavaScript
    </script>
}
