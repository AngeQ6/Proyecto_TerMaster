
@{
    ViewBag.Title = "Registrar_administrador_local";
    Layout = "~/Views/Shared/_Layout - admin_general.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<form method="post" action="@Url.Action("Registrar_administrador_local", "Administrador_general")">
    <div class="header_2">
        <h2>Registrar Administrador Local</h2>
    </div>
    <br />

    <div class="form-group">
        <label for="id_admin_local">ID</label>
        <input type="number" class="form-control" id="id_admin_local" name="id_admin_local" placeholder="Ingrese el ID" required />
    </div>
    <br />

    <div class="form-group">
        <label for="nombre_admin_local">Nombre Completo</label>
        <input type="text" class="form-control" id="nombre_admin_local" name="nombre_admin_local" placeholder="Ingrese el nombre completo" required />
    </div>
    <br />

    <div class="form-group">
        <label for="apellido_admin_local">Apellido</label>
        <input type="text" class="form-control" id="apellido_admin_local" name="apellido_admin_local" placeholder="Ingrese el apellido" required />
    </div>
    <br />

    <div class="form-group">
        <label for="correo_admin_local">Correo Electrónico</label>
        <input type="email" class="form-control" id="correo_admin_local" name="correo_admin_local" placeholder="Ingrese el correo electrónico" required />
    </div>
    <br />

    <div class="form-group">
        <label for="telefono_admin_local">Teléfono</label>
        <input type="tel" class="form-control" id="telefono_admin_local" name="telefono_admin_local" placeholder="Ingrese el número de teléfono" required />
    </div>
    
    <br />
    <div class="form-group">
        <label for="id_pueblo">Ingrese el código del pueblo</label>
        <input type="tel" class="form-control" id="id_pueblo" name="id_pueblo" placeholder="Ingrese el código de su pueblo" required />
        <small id="pueblo-feedback" class="form-text"></small> <!-- Espacio para mostrar el feedback -->
    </div>
    <br />
    <div class="mb-3">
        <input type="hidden" id="esado" name="estado" value="Activo">
    </div>


    <button type="submit" class="btn btn-primary btn-block">Registrar</button>
    <a href="@Url.Action("Gestion_admin_local", "Admin_local")" class="btn btn-secondary submit_btn w-40 my-4">Atrás</a>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: '¡Éxito!',
                text: '@Html.Raw(TempData["SuccessMessage"])'
            }).then(function () {
                window.location = '@Url.Action("Gestión_admin_local", "Administrador_general")';
            });
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: '¡Error!',
                text: '@Html.Raw(TempData["ErrorMessage"])'
            });
        </script>
    }
</form>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    body {
        background-color: #f4f4f4; /* Color de fondo */
        font-family: Arial, sans-serif; /* Fuente general */
    }

    .container {
        max-width: 800px; /* Ancho máximo del contenedor */
        margin: 50px auto; /* Centrado vertical y horizontal */
        padding: 30px; /* Espaciado interno */
        border-radius: 10px; /* Bordes redondeados */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Sombra */
        background-color: #ffffff; /* Fondo del contenedor */
    }

    .header_2 {
        background: -webkit-linear-gradient(315deg, #4723D9 0%, #00D2Df 100%);
        padding: 10px;
        border-radius: 10px 10px 0 0;
    }

    h2 {
        color: #ffffff;
    }

    .btn-primary {
        background-color: #6f42c1; /* Color del botón */
        border: none; /* Sin borde */
    }

        .btn-primary:hover {
            background-color: #5a32a1; /* Color del botón al pasar el mouse */
        }

    .is-valid {
        border-color: #28a745; /* Verde para indicar éxito */
    }

    .is-invalid {
        border-color: #dc3545; /* Rojo para indicar error */
    }

    .text-success {
        color: #28a745; /* Texto verde para éxito */
    }

    .text-danger {
        color: #dc3545; /* Texto rojo para error */
    }


</style>



<script>
    $(document).ready(function () {
        $('#id_pueblo').on('input', function () {
            var idPueblo = $(this).val();
            var feedbackElement = $('#pueblo-feedback');

            if (idPueblo) {
                $.ajax({
                    url: '@Url.Action("Validar_id_pueblo", "Administrador_general")',
                    type: 'POST',
                    data: { id_pueblo: idPueblo },
                    success: function (response) {
                        if (response.existe) {
                            // Si el pueblo existe, color verde
                            $('#id_pueblo').removeClass('is-invalid').addClass('is-valid');
                            feedbackElement.removeClass('text-danger').addClass('text-success');
                            feedbackElement.text('El código del pueblo es válido.');
                        } else {
                            // Si no existe, color rojo
                            $('#id_pueblo').removeClass('is-valid').addClass('is-invalid');
                            feedbackElement.removeClass('text-success').addClass('text-danger');
                            feedbackElement.text('El código del pueblo no existe.');
                        }
                    },
                    error: function () {
                        $('#id_pueblo').removeClass('is-valid').addClass('is-invalid');
                        feedbackElement.removeClass('text-success').addClass('text-danger');
                        feedbackElement.text('Error al validar el código del pueblo.');
                    }
                });
            } else {
                // Si el campo está vacío, resetear los estilos
                $('#id_pueblo').removeClass('is-valid is-invalid');
                feedbackElement.text('');
            }
        });
    });
</script>


