
@{
    ViewBag.Title = "Modificar_datos_personales";
    Layout = "~/Views/Shared/_Layout - conductor.cshtml";
}

<form enctype="multipart/form-data">
    <div class="header_2">
        <h2>Modificar datos personales</h2>
    </div>
    <br />
    <div class="form-group">
        <label for="id">ID</label>
        <input type="text" class="form-control" id="id" name="id" value="@ViewBag.id_conductor" readonly />
    </div>
    <br />
    <div class="form-group">
        <label for="nombre">Nombre Completo</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese su nombre completo" value="@ViewBag.nombre" required />
    </div>
    <br />
    <div class="form-group">
        <label for="correo">Correo Electrónico</label>
        <input type="email" class="form-control" id="correo" name="correo" placeholder="Ingrese su correo electrónico" value="@ViewBag.correo" required />
    </div>
    <br />
    <div class="form-group">
        <label for="telefono">Teléfono</label>
        <input type="tel" class="form-control" id="telefono" name="telefono" placeholder="Ingrese su número de teléfono" value="@ViewBag.telefono" required />
    </div>
    <br />
    <div class="form-group">
        <label for="imagen">Imagen</label>
        <input type="file" class="form-control" id="imagenUrl" name="imagenUrl" />
    </div>
    <br />

    <button type="submit" class="btn btn-primary btn-block">Modificar</button>
</form>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    body {
        background-color: #f4f4f4; /* Color de fondo */
        font-family: Arial, sans-serif; /* Fuente general */
    }

    .container {
        max-width: 800px; /* Ancho máximo del contenedor */
        margin: 50px auto; /* Centrado vertical y horizontal */
        padding: 30px; /* Espaciado interno */
        border-radius: 10px; /* Bordes redondeados */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Sombra */
    }

    .header_2 {
        background: -webkit-linear-gradient(315deg, #4723D9 0%, #00D2Df 100%);
        padding: 10px;
        border-radius: 10px 10px 0 0;
    }

    h2 {
        color: #ffffff;
    }

    .btn-primary {
        background-color: #6f42c1; /* Color del botón */
        border: none; /* Sin borde */
    }

        .btn-primary:hover {
            background-color: #5a32a1; /* Color del botón al pasar el mouse */
        }
</style>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>

$(document).ready(function () {
    $.ajax({
        url: "@Url.Action("Obtener_datos_conductor", "Conductor")",
        type: 'GET',
        success: function (data) {
            console.log("Datos recibidos:", data); // Verifica los datos recibidos
            if (data) {
                // No necesitas parsear 'data' porque ya es un objeto JSON
                $('#id').val(data.id_conductor);
                $('#nombre').val(data.nombre);
                $('#correo').val(data.correo);
                $('#telefono').val(data.telefono);
            } else {
                alert("No se recibieron datos del servidor.");
            }
        },
        error: function (xhr, status, error) {
            console.error("Error en la solicitud AJAX:", status, error); // Imprime el error en la consola
            alert("Error en la solicitud AJAX: " + error);
        }
    });
});

 // Enviar datos del formulario
            $('form').submit(function (e) {
                e.preventDefault(); // Evita el envío del formulario tradicional

                var formData = new FormData(this); // Crear un objeto FormData con los datos del formulario

                $.ajax({
                    url: '@Url.Action("Modificar_datos_conductor", "Conductor")',
                    type: 'POST',
                    data: formData,
                    processData: false, // No procesar los datos, FormData lo hace por nosotros
                    contentType: false, // No establecer el tipo de contenido, FormData lo gestiona
                    success: function (response) {
                        if (response && response.success) {
                            Swal.fire({
                                icon: "success",
                                title: "Actualización exitosa"
                            });
                        } else {
                            Swal.fire({
                                icon: "error",
                                title: "Error al actualizar los datos"
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            icon: "error",
                            title: "Error en la solicitud AJAX",
                            text: error
                        });
                    }
                });
            });


    </script>
}
